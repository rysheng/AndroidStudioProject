<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="8dp"
    app:cardElevation="10dp"
    android:layout_marginBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ln_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_name"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_person_pin_24">
            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Full name">
                </TextView>

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_vertical"
                    android:text="Email">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:onClick="onClickShowInfor"
            android:id="@+id/item_contact"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:visibility="gone">
            <ImageView
                android:layout_gravity="bottom"
                android:id="@+id/phone_img"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_phone_24">
            </ImageView>

            <ImageView
                android:layout_gravity="bottom"
                android:id="@+id/sms_img"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_sms_24">
            </ImageView>

            <ImageView
                android:layout_gravity="bottom"
                android:id="@+id/video_call_img"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_video_call_24">
            </ImageView>

            <ImageView
                android:layout_gravity="bottom"
                android:id="@+id/info_img"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_info_24">
            </ImageView>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>